<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    
    <% @bike.photos[1..-1].each_with_index do |photo, index| %>
      <li data-target="#carouselExampleIndicators" data-slide-to="'<%= index + 1%>'"></li>
    <% end %>
  </ol>

  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= cl_image_tag(@bike.photos.first.key, :quality=>70, crop: :scale, class: "bike-photo d-block w-100") %>
    </div>
    <% @bike.photos[1..-1].each do |photo| %>
      <div class="carousel-item">
      <%= cl_image_tag(photo.key, :quality=>70, crop: :scale, class: "bike-photo d-block w-100") %>    
      </div>
    <% end %>
  </div>

   <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
 