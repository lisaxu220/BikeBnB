<%= render "shared/navbar" %>
<div class="container">
  <h1><%= @bike.name %></h1>
  <%= render "carousel" %>
  <hr>
  <div class="bike-container">
  <div class="bike-info">
    <ul class="bike-specs">
      <li>🚴‍♂️ <%= @bike.capacity %> </li>
      <li> $<%= @bike.price %></li>
    </ul>
    <h5>Bike description</h5>
    <p><%= @bike.description %></p>
  </div>

  <div class="booking-form">
    <%= render "bookings/new" %>
  </div>
  </div>


  <%= link_to "Back to list", bikes_path %>
  <%= link_to "Book now!", new_bike_booking_path(@bike) %>



</div>
