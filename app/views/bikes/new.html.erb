<%= simple_form_for(@bike) do |f| %>
   <%= f.label :name %>
   <%= f.text_field :name %>
   <%= f.label :description %>
   <%= f.text_field :description %>
   <%= f.label :capacity %>
   <%= f.number_field :capacity, in: 1..6 %>
   <%= f.label :price %>
   <%= f.number_field :price, in: 1..50 %>
   <%= f.submit %>
<% end %>
